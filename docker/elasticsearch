version: '3'
services:
  elasticsearch:
    image: elasticsearch
    restart: always
    ports:
      - "9200:9200"
      - "9300:9300"
    volumes:
      - elasticsearch-volume:/usr/share/elasticsearch/data
    environment:
      - 'discovery.type=single-node'
      - 'ES_JAVA_OPTS=-Xms512m -Xmx1024m'
    privileged: true
    hostname: elasticsearch
    container_name: elasticsearch
volumes:
  elasticsearch-volume:
    external: false
    
